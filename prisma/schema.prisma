generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

enum Role {
  ADMIN
  GARCOM
  COZINHA
  CAIXA
}

enum OrderStatus {
  OPEN
  SENT_TO_KITCHEN
  READY
  WAITING_PAYMENT
  CLOSED
  CANCELED
}

enum PaymentMethod {
  DINHEIRO
  CARTAO
  PIX
}

model User {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  name      String
  username  String   @unique
  pin       String
  role      Role     @default(GARCOM)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Table {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id         String   @id @default(cuid())
  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])
  code       String   @unique
  name       String
  priceCents Int
  imageUrl   String?
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  stockQty   Int      @default(0)
  stockMin   Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  items      OrderItem[]
}

model Category {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  products  Product[]
}

model Order {
  id             String      @id @default(cuid())
  companyId      String
  company        Company     @relation(fields: [companyId], references: [id])
  code           String      @unique
  tableId        String
  table          Table       @relation(fields: [tableId], references: [id])
  userId         String?
  user           User?       @relation(fields: [userId], references: [id])
  status         OrderStatus @default(OPEN)
  createdAt      DateTime    @default(now())
  closedAt       DateTime?

  serviceEnabled Boolean     @default(true)
  serviceRateBps Int         @default(1000)

  subtotalCents  Int?
  serviceCents   Int?
  totalCents     Int?

  paymentMethod  PaymentMethod?

  items          OrderItem[]
  printJobs      PrintJob[]
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  qty       Int
  note      String?
  sentToKitchenAt DateTime?
  preparedAt DateTime?
  canceledAt DateTime?
  canceledReason String?
  canceledBy String?
  createdAt DateTime @default(now())
}

model PrintJob {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  type      String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  printedAt DateTime?
}

model Company {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  dbName    String   @unique
  logoUrl   String?
  phone     String?
  email     String?
  address   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  users     User[]
  tables    Table[]
  products  Product[]
  categories Category[]
  orders    Order[]
}

model SuperAdmin {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  pin       String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
